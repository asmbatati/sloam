<?xml version="1.0"?>
<launch>
  <!-- Static Transform Publishers for TF tree -->
  
  <!-- map to odom (set up for SLOAM) -->
  <node pkg="tf" type="static_transform_publisher" name="map_to_odom"
        args="0 0 0 0 0 0 /map /odom 100" />
        
  <!-- Handle world->map transform if needed -->
  <node pkg="tf" type="static_transform_publisher" name="world_to_map"
        args="0 0 0 0 0 0 /world /map 100" />
        
  <!-- For visualization in RVIZ (Gazebo world is the reference frame) -->
  <node pkg="tf" type="static_transform_publisher" name="gazebo_world_to_world"
        args="0 0 0 0 0 0 /gazebo_world /world 100" />
</launch>